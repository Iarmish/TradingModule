<Window x:Class="ShortPeakRobot.AuthenticateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShortPeakRobot"
        mc:Ignorable="d"
        x:Name="AuthWindow"
        Title="Authenticate Window" Height="446" Width="794" Loaded="AuthWindow_Loaded" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock Margin="0,22,0,367" FontSize="14" x:Name="TbAuthMessage" HorizontalAlignment="Center"/>
        <Border BorderBrush="Gray" BorderThickness="1" Margin="100,90,100,80" >
            <StackPanel Orientation="Vertical"  Background="LightGray" >

                <Label Content="Login" Margin="30,10,30,0" Padding="3"/>
                <TextBox x:Name="TbLogin"   Margin="30,10,30,0" Padding="5"/>
                <Label Content="Password" Margin="30,10,30,0" Padding="3"/>
                <TextBox x:Name="TbPass"  Margin="30,10" Padding="5"/>


                
                <Button x:Name="BtnLogin" Margin="30,30,30,30" Padding="5"  Click="BtnLogin_Click">Log In</Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
